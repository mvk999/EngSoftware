{
  "openapi": "3.0.0",
  "info": {
    "title": "Vought Tech API",
    "version": "1.0.0",
    "description": "API oficial do sistema Vought Tech — Autenticação, clientes, categorias, produtos, carrinho e pedidos."
  },

  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local de desenvolvimento"
    }
  ],

  "tags": [
    { "name": "Auth", "description": "Login e recuperação de senha" },
    { "name": "Cliente", "description": "Cadastro de clientes (RF010)" },
    { "name": "Categoria", "description": "CRUD de categorias (RF002–RF005)" },
    { "name": "Produto", "description": "Consulta e administração de produtos (RF011–RF016)" },
    { "name": "Carrinho", "description": "Gerenciamento do carrinho (RF012)" },
    { "name": "Pedido", "description": "Histórico, criação e processamento de pedidos (RF006–RF009)" },
    { "name": "Endereco", "description": "Gerenciamento de endereços do usuário" }
  ],

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },

    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "integer" }
      },
      "produtoId": {
        "name": "produtoId",
        "in": "path",
        "required": true,
        "schema": { "type": "integer" }
      },
      "token": {
        "name": "token",
        "in": "path",
        "required": true,
        "schema": { "type": "string" }
      }
    },

    "responses": {
      "BadRequest": {
        "description": "Requisição inválida",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      },
      "Unauthorized": {
        "description": "Token ausente ou inválido",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      },
      "Forbidden": {
        "description": "Acesso negado ao recurso (somente ADMIN)",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      }
    },

    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "erro": { "type": "string" },
          "detalhes": { "type": "string" }
        }
      },

      "ClienteCreate": {
        "type": "object",
        "required": ["nome", "email", "senha", "cpf"],
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string" },
          "cpf": { "type": "string" }
        }
      },

      "Cliente": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "cpf": { "type": "string" },
          "tipo": { "type": "string", "enum": ["CLIENTE", "ADMIN"] }
        }
      },

      "Categoria": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" }
        }
      },

      "CategoriaCreateRequest": {
        "type": "object",
        "required": ["nome"],
        "properties": {
          "nome": { "type": "string", "minLength": 3 }
        }
      },

      "CategoriaUpdateRequest": {
        "type": "object",
        "required": ["nome"],
        "properties": {
          "nome": { "type": "string", "minLength": 3 }
        }
      },

      "Produto": {
        "type": "object",
        "required": ["nome", "descricao", "preco", "estoque", "idCategoria"],
        "properties": {
          "nome": { "type": "string" },
          "descricao": { "type": "string" },
          "preco": { "type": "number", "format": "float" },
          "estoque": { "type": "integer" },
          "idCategoria": { "type": "integer" }
        }
      },

      "CarrinhoItem": {
        "type": "object",
        "required": ["idProduto", "quantidade"],
        "properties": {
          "idProduto": { "type": "integer" },
          "quantidade": { "type": "integer", "minimum": 1 }
        },
        "description": "RBR-110: quantidade >= 1. RBR-111: item único no carrinho."
      },
      "Endereco": {
        "type": "object",
        "properties": {
          "id_endereco": { "type": "integer" },
          "id_usuario": { "type": "integer" },
          "rua": { "type": "string" },
          "numero": { "type": "string" },
          "bairro": { "type": "string" },
          "cidade": { "type": "string" },
          "estado": { "type": "string" },
          "cep": { "type": "string" }
        }
      },
      "EnderecoCreateRequest": {
  "type": "object",
  "required": ["rua", "numero", "bairro", "cidade", "estado", "cep"],
  "properties": {
    "rua": { "type": "string" },
    "numero": { "type": "string" },
    "bairro": { "type": "string" },
    "cidade": { "type": "string" },
    "estado": { "type": "string" },
    "cep": { "type": "string" }
  }
},

"EnderecoUpdateRequest": {
  "type": "object",
  "required": ["rua", "numero", "bairro", "cidade", "estado", "cep"],
  "properties": {
    "rua": { "type": "string" },
    "numero": { "type": "string" },
    "bairro": { "type": "string" },
    "cidade": { "type": "string" },
    "estado": { "type": "string" },
    "cep": { "type": "string" }
  }
},
      "Carrinho": {
        "type": "object",
        "properties": {
          "itens": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idProduto": { "type": "integer" },
                "quantidade": { "type": "integer" }
              }
            }
          }
        }
      },

      "Pedido": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "data": { "type": "string", "format": "date-time" },
          "status": { "type": "string" },
          "valorTotal": { "type": "number", "format": "float" },
          "historicoStatus": {
            "type": "array",
            "description": "RBR-071: cada alteração deve registrar data, hora e ADMIN responsável.",
            "items": {
              "type": "object",
              "properties": {
                "status": { "type": "string" },
                "data": { "type": "string", "format": "date-time" },
                "alteradoPor": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },

  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Realiza login e retorna token JWT",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["email", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },

    "/auth/reset": {
      "post": {
        "tags": ["Auth"],
        "summary": "Solicita envio de token de recuperação de senha (RF013)",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token enviado ao email" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },

    "/auth/reset/{token}": {
      "post": {
        "tags": ["Auth"],
        "summary": "Redefine senha com token recebido por email (RF013)",
        "security": [],
        "parameters": [
          { "$ref": "#/components/parameters/token" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "novaSenha": { "type": "string" }
                },
                "required": ["novaSenha"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha atualizada" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },

    "/cliente": {
      "post": {
        "tags": ["Cliente"],
        "summary": "Cria um novo cliente (RF010)",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ClienteCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Cliente" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      }
    },

    "/categoria": {
      "get": {
        "tags": ["Categoria"],
        "summary": "Lista todas as categorias (ordem alfabética — RBR-020)",
        "security": [],
        "responses": {
          "200": {
            "description": "Lista retornada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Categoria" }
                }
              }
            }
          }
        }
      },

      "post": {
        "tags": ["Categoria"],
        "summary": "Cria uma nova categoria (ADMIN) — RF002",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CategoriaCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categoria criada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Categoria" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },

    "/categoria/{id}": {
      "get": {
        "tags": ["Categoria"],
        "summary": "Obtém categoria por ID (RF003)",
        "security": [],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": {
            "description": "Categoria encontrada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Categoria" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },

      "put": {
        "tags": ["Categoria"],
        "summary": "Atualiza categoria (ADMIN) — RF004",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CategoriaUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Categoria atualizada" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      },

      "delete": {
        "tags": ["Categoria"],
        "summary": "Remove categoria (ADMIN) — RF005",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": { "description": "Categoria removida" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },
    "/produto": {
      "get": {
        "tags": ["Produto"],
        "summary": "Lista produtos ou realiza busca (RF011)",
        "security": [],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Termo de busca pelo nome do produto (RBR-101: busca apenas pelo nome)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de produtos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Produto" }
                }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" }
        },

      "post": {
        "tags": ["Produto"],
        "summary": "Cria um novo produto (ADMIN) — RF015",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "nome": { "type": "string" },
                "descricao": { "type": "string" },
                "preco": { "type": "number", "format": "float" },
                "estoque": { "type": "integer" },
                "idCategoria": { "type": "integer" },
                "imagem": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "required": ["nome", "preco", "estoque", "idCategoria"]
            }
          }
        }
      },
        "responses": {
          "201": { "description": "Produto criado" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },

        "/produto/{id}": {
      "put": {
        "tags": ["Produto"],
        "summary": "Atualiza produto existente (ADMIN) — RF014",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "requestBody": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "nome": { "type": "string" },
                "descricao": { "type": "string" },
                "preco": { "type": "number", "format": "float" },
                "estoque": { "type": "integer" },
                "idCategoria": { "type": "integer" },
                "imagem": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      },

        "responses": {
          "200": { "description": "Produto atualizado" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      },

      "delete": {
        "tags": ["Produto"],
        "summary": "Remove produto (ADMIN) — RF016",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": { "description": "Produto removido" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },

    "/carrinho": {
      "get": {
        "tags": ["Carrinho"],
        "summary": "Retorna o carrinho do usuário autenticado (RF012)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Carrinho carregado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Carrinho" }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },

      "post": {
        "tags": ["Carrinho"],
        "summary": "Adiciona item ao carrinho do usuário (RF012)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CarrinhoItem" }
            }
          }
        },
        "responses": {
          "201": { "description": "Item adicionado ao carrinho" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },

      "delete": {
        "tags": ["Carrinho"],
        "summary": "Esvazia todo o carrinho do usuário (RF012)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Carrinho esvaziado" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },

    "/carrinho/{produtoId}": {
      "put": {
        "tags": ["Carrinho"],
        "summary": "Atualiza quantidade de um item do carrinho (RF012)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/produtoId" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["quantidade"],
                "properties": {
                  "quantidade": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "RBR-110: quantidade deve ser >= 1"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Item atualizado" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },

      "delete": {
        "tags": ["Carrinho"],
        "summary": "Remove item específico do carrinho (RF012)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/produtoId" }
        ],
        "responses": {
          "200": { "description": "Item removido" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/pedido/me": {
      "get": {
        "tags": ["Pedido"],
        "summary": "Lista pedidos do cliente autenticado (RF007)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de pedidos do cliente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Pedido" }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },

    "/pedido/me/{id}": {
      "delete": {
        "tags": ["Pedido"],
        "summary": "Cancela o próprio pedido (RF009 — cliente)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": { "description": "Pedido cancelado com sucesso" },
          "400": { "erro": "Este pedido não pode mais ser cancelado." },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },

  "/pedido": {
  "post": {
    "tags": ["Pedido"],
    "summary": "Cria pedido baseado no carrinho do usuário autenticado (RF006)",
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "endereco_id": { "type": "integer" }  
            },
            "required": ["endereco_id"] 
          }
        }
      },
      "responses": {
        "201": { "description": "Pedido criado com sucesso" },
        "400": { "$ref": "#/components/responses/BadRequest" },
        "401": { "$ref": "#/components/responses/Unauthorized" }
      }
    }
  },


      "get": {
        "tags": ["Pedido"],
        "summary": "Lista todos os pedidos (ADMIN) — RF008",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista completa de pedidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Pedido" }
                }
              }
            }
          },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },

    "/pedido/{id}": {
      "get": {
        "tags": ["Pedido"],
        "summary": "Consulta detalhes de um pedido (ADMIN) — RF008",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": {
            "description": "Pedido encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Pedido" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      },

      "delete": {
        "tags": ["Pedido"],
        "summary": "Cancela pedido (ADMIN) — opção administrativa",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/id" }
        ],
        "responses": {
          "200": { "description": "Pedido cancelado pelo administrador" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },
  "put": {
    "tags": ["Pedido"],
    "summary": "Atualiza pedido (status, itens e estoque) — RF008",
    "security": [{ "bearerAuth": [] }],
    "parameters": [
      { "$ref": "#/components/parameters/id" }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "enum": [
                  "pendente",
                  "processando",
                  "enviado",
                  "entregue",
                  "cancelado"
                ]
              },
              "itens": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "idProduto": { "type": "integer" },
                    "quantidade": { "type": "integer" }
